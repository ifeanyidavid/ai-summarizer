    "dev:api": "cross-env NODE_OPTIONS='--require dotenv/config' nodemon",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "react-router typegen && tsc -b"
