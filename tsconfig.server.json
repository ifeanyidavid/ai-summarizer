{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "composite": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2022"]
  },
  "include": ["server/**/*", "vite.config.ts", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
