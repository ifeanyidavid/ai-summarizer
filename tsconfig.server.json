{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "outDir": "./server_build",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "composite": false,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "api/**/*",
    "types/**/*",
    "lib/**/*",
    "prisma/**/*",
    "prisma/generated/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
